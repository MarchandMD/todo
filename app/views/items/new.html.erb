<div class="row justify-content-center">
  <div class="col-sm-2">
    <h1>Add an item</h1>
  </div>
</div>

<div class="row">
  <div class="col">
    <%= form_with(url: "/items",scope: :item, method: :post, local: true) do |form| %>
      <div class="d-flex justify-content-center">
        <%= form.label(:description, "Description") %>
        <%= form.text_field :description %>
      </div>
      <br>
      <div class="d-flex justify-content-center"><%= form.submit "Add Item" %></div>
    <% end %>
  </div>
</div>
