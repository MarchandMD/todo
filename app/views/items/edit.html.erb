<h1>Edit item</h1>

<%= form_with(scope: :item, url: items_path(id: @item), method: :patch, local: true) do |form| %>

  <p>
    <%= form.label :description %><br>
    <%= form.text_field :description %>
  </p>

  <p>
    <%= form.label :status %><br>
    <%= form.select :status, [0, 1, 2] %>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>

<%= link_to 'Back', root_path %>