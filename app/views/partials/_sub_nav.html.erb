<div class="col-sm-6">
  <div class="d-flex justify-content-around">
    <%= link_to 'add item', "/items/new", class: 'btn btn-success' %>
    <%= link_to 'past items', past_items_path, class: 'btn btn-warning' %>
    <%= link_to 'completed items', root_path, class: 'btn btn-danger' %>
  </div>
  <div class="d-flex justify-content-around mt-3">
    <%= form_tag("/items", method: :get) do %>
      <%= text_field_tag(:search, params[:search], placeholder: 'search description') %>
      <%= submit_tag ("Search") %>
      <%= link_to ("clear") %>
    <% end %>
  </div>
</div>
